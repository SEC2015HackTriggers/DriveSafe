<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="40dp"

    tools:context=".fragments.DriverRegistrationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"

            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Registration"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="top"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/driver_image"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:background="@drawable/box_outline_coloured"
            android:layout_margin="5dp"
            android:layout_height="120dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:background="@color/DS"
                android:layout_gravity="center"
                android:id="@+id/upload_image"
                android:onClick="SetImage"
                />


            <EditText

            android:id="@+id/driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:inputType="text"
            android:hint="  Name"
            android:drawableLeft="@drawable/name"
            android:ems="10"
            />

        <EditText
            android:id="@+id/driver_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            />

        <EditText
            android:id="@+id/driver_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Password"
            android:ems="10"
            android:drawableLeft="@drawable/password"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/driver_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Phone number"
            android:ems="10"
            android:drawableLeft="@drawable/phone"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/driver_owner_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Owner's phone number"
            android:ems="10"
            android:drawableLeft="@drawable/owner_phone"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/driver_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  License number"
            android:ems="10"
            android:drawableLeft="@drawable/license_number"
            android:inputType="text"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/driver_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edge_button"

            android:text="Register"
            />

    </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>